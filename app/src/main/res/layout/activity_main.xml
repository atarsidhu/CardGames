<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundVariant"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:ellipsize="none"
        android:fadingEdgeLength="100dp"
        android:requiresFadingEdge="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".25">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButtonBlackjack"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/blackjack_v2"
                android:contentDescription="@string/speed_description" />

            <ImageButton
                android:id="@+id/imageButtonGoFish"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/go_fish_v2"
                android:contentDescription="@string/go_fish_description" />

            <ImageButton
                android:id="@+id/imageButtonGoFish2"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/go_fish_v2"
                android:contentDescription="@string/go_fish_description" />

            <ImageButton
                android:id="@+id/imageButtonGoFish3"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/go_fish_v2"
                android:contentDescription="@string/go_fish_description" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>